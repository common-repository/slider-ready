<!-- Ready! Slider -->
<div id="ready-slider-{{ slider.id }}" class="ready-slider ready-slider-{{ slider.id }}" data-settings="{{ slider.settings|json_encode }}">
    <ul class="ready-slider-list">
        {% for image in slider.images %}
            <li class="ready-slider-list-item">
                <img src="{{ image.attachment.sizes.full.url }}" title="{{ image.attachment.title }}" alt="{{ image.attachment.title }}" class="ready-slider-image ready-slider-image-{{ image.id }} ready-slider-attachment-{{ image.attachment.id }}"/>
            </li>
        {% endfor %}
    </ul>
</div>
