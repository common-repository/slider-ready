<div id="ready-slider-{{ slider.id }}" class="ready-slider ready-slider-{{ slider.plugin }}" data-settings="{{ slider.settings|json_encode }}">
    <ul style="margin-left: 0 !important; margin-right: 0 !important;">
        {% for entity in slider.entities %}
            {% if entity.type == 'image' %}
                <li>
                    <img src="{{ entity|image_size(slider.settings.properties.width, slider.settings.properties.height) }}" alt="{{ entity.attachment.title|title }}" title="{{ entity.attachment.description }}"/>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</div>